#!/usr/bin/env ruby

$stdout.sync = true

require 'open-uri'

expected = ENV['ID']
url = 'https://dpl-test.azurewebsites.net/'

def poll(url)
  URI.parse(url).read
rescue => e
  puts e.message
end

20.times do
  actual = poll(url)
  puts "expected: #{expected.inspect}"
  puts "actual: #{actual.inspect}"
  exit 0 if actual == expected
  sleep 5
end

abort 'failed'
